@page "/"

<PageTitle>Index</PageTitle>
<AuthorizeView>
    <Authorized>
    <h1 class="text-center">
        Welcome to Product Inventory Management,
        @($"{context.User.FindFirst("firstname")?.Value} {context.User.FindFirst("lastname")?.Value}")!
    </h1>
    <br />
    <br />
    </Authorized>
</AuthorizeView>
<AuthorizeView>
    <Authorized>
        <button class="btn btn-primary" @onclick="GoToProducts">Go to Products</button>
    </Authorized>
    <NotAuthorized>
        <button class="btn btn-success" @onclick="GoToLogin">Login</button>
    </NotAuthorized>
</AuthorizeView>

